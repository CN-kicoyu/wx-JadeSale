.against-wrap {
    margin-top:20rpx;
    background: white;
}
.inbasket {
  white-space: nowrap;
  height: 242rpx;
}

.inbasket-content, .inbasket-del {
  display: inline-flex;
  font-weight: bold;
}

.inbasket-content {
  padding: 20rpx 0;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
}

.inbasket-content > image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 4px;
  margin:0 20rpx 0 30rpx;
  display: block;
}

.content-info {
  padding: 2rpx 30rpx 0 0;
  width: 470rpx;
}

.info-title {
  display: block;
  height:75rpx;
overflow:hidden;
white-space:normal;
word-break:break-all;
font-size:26rpx;

}

.info-attr {
  font-size: 20rpx;
  display: inline-block;
  margin: 16rpx 0 10rpx;
}

.info-active {
  background: #2a9dff;
  border-radius: 4px;
  font-size: 20rpx;
  padding:4rpx 10rpx;
color:white;
text-align:center;
margin-right:15rpx;

}

.info-buy {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.info-buy > text {
  color: #ffcf55;
  font-size: 26rpx;
  font-weight: bolder;
  display: block;
  margin-top: 10rpx;
}


.inbasket-del {
  color: white;
  width: 100rpx;
  text-align: center;
  vertical-align: top;
  padding: 20rpx 0;
}

.inbasket-del text {
  background: #ffcf55;
  display: block;
  height: 240rpx;
  line-height: 240rpx;
  padding: 0 50rpx;
}

.inbasket-check {
    margin:auto 15rpx;
}

.good-col-price {
    padding: 15rpx 0;
}

.price-current {
    color:#333;
    font-size:26rpx;
    margin-right:30rpx;
    line-height:30rpx;
    font-weight:bolder;
}

.price-old {
    font-size:26rpx;
    color:#cccccc;
    position:relative;
}

.text-del {
    display:block;
    width:105%;
    position:absolute;
    height:1px;
    background: #ccc;
    top:50%;
    left:0;
}
.against-last {
    display: flex;
    flex-direction: column;
    width: 300rpx;
}
.against-last-time {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top:10rpx;

}

.against-last-time >image {
    width:22rpx;
height:22rpx;
vertical-align:middle;
margin-right:13rpx;
position:relative;

}
.against-last-time >text {
    color:#ffd800;
}

.info-num {
    border-left:1px solid #dedede;
    padding:0 30rpx;

}
.info-num >image {
    width:38rpx;
height:38rpx;
vertical-align:middle;
position:relative;
top:10rpx;

}