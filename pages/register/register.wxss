page {
  background: white;
}

.register {
  margin-top: 75rpx;
}

.signin-wrap {
  width: 558rpx;
  margin: 42rpx auto;
}

.signin-wrap >text {
  color: #aaa;
  margin-bottom: 6rpx;
  font-size:24rpx;
}

.sign-input {
  border-bottom: 1px solid #dedede;
  padding: 10rpx 0;
  font-size: 26rpx;
}

.signin-password {
  color: #ffcf55;
  width: 558rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.signin-password > label {
  color: #ffcf55;
}

button[type="default"].btn {
  width: 558rpx;
  margin-top: 100rpx;
  color: #fff;
  background: #16222a;
  font-size:26rpx;
  padding: 10rpx 0;
}

.text {
  width: 100%;
  text-align: center;
  display: block;
  margin: 50rpx 0;
  font-size: 26rpx;
}

.inputlist {
  border: 1px solid #dedede;
  padding: 10rpx 20rpx;
  background: white;
  font-size: 26rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right:30rpx;
}
.inputlist:last-child {
  margin-right:0;
}

.inputlist text {
  color: #ccc;
  margin-right: 30rpx;
}

.inputlist .input {
  font-family: "PingFang SC",
                 "Helvetica Neue",
                 "Microsoft Yahei",
                 STHeiti,
                 Tahoma,
                 Simsun,
                 Arial,
                 sans-serif;
  font-size: 26rpx;
  vertical-align: middle;
}

.rows {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.menu-arrow {
  width: 12rpx;
  height: 26rpx;
  vertical-align: middle;
}

.city {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.choose {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top:20rpx;
}