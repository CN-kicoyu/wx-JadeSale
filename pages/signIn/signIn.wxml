<button type="default" loading="{{isloading}}" plain="{{true}}" form-type="submit" hover-class="button-hover" class="btn"  bindtap="bindButtonTap" disabled="{{btnDisabled}}"> 登录 </button>
</form>
<view class="other">
  <view class="infos">
    <text class="hr"></text>
    <text class="text">用社交平台登录</text>
    <text class="hr"></text>
  </view>
