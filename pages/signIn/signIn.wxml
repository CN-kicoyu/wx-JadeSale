<form bindsubmit="formSubmit" >
<view class="signin-avator">
  <image src="/images/icon/logo.png"></image>
</view>
<view class="signin-wrap">
  <text>用户名</text>
  <view class="user">
    <input focus="{{focus}}" class="sign-input" bindinput="userInput"/>
    <image src="/images/icon/icon_user.png" />
  </view>
</view>
<view class="signin-wrap">
  <text>密码</text>
  <view class="user">
    <input focus="{{focus}}" class="sign-input" password="{{true}}"  bindinput="pswInput" maxlength="20"/>
    <image src="/images/icon/icon_lock.png" />
  </view>
</view>
