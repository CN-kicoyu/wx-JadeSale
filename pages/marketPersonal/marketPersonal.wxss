.good-col {
  display: flex;
  flex-direction: column;
  width: 372rpx;
  background: #fff;
  position: relative;
}

.goods-wrap {
  position: relative;
  overflow: hidden;
  width: 372rpx;
  height: 372rpx;
}
.good-col-img {
  width: 100%;
  height: 100%;
}
.good-col-txt {
  font-size: 26rpx;
  font-weight: bold;
  color: #aaa;
  padding: 0 10rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  position: relative;
  display: block;
  margin-top: 20rpx;
}

.goods-prices {
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  padding: 20rpx 10rpx 10rpx;
}

.good-col-num {
  color: #fff;
  width:90rpx;
  height:40rpx;
  border-radius: 4rpx;
  background: #ffcf55;
  line-height: 40rpx;
  text-align:center;
}
.price-current {
  color: #ffcf55;
  font-size: 26rpx;
  margin-right: 30rpx;
  line-height: 30rpx;
  font-weight: bolder;
}
.mperson-avator {
  position:relative;
  height:490rpx;
  overflow:hidden;
}
.mperson-avator-bg {
  position:absolute;
  top:0;
  left:0;
  width:100%;
  height:490rpx;
  filter: blur(3px);
  z-index:-1;
}
.mperson-avator-info {
  background: rgba(0,0,0,.5);
  height:490rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top:70rpx;
  color:white;
}
.mperson-avator-info > image {
  width:94rpx;
  height:94rpx;
  border-radius:100%;
  margin-bottom:20rpx;
}
.mperson-avator-btn {
  width:150rpx;
  height:48rpx;
  line-height:48rpx;
  border-radius:100px;
  background:white;
  margin-top:72rpx;
  color:#333;
  text-align:center;
}
.mperson-avator-num {
  display: flex;
  flex-direction: row;
  justify-content: center;
  width:100%;
  margin-top:50rpx;
}
.mperson-avator-num > view {
  flex:1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.mperson-info {
  display: flex;
  flex-direction: column;
  background: white;
  margin-bottom:20rpx;
  padding:15rpx 0;
  width:100%;
}
.mperson-info-dot {
  font-style: italic;
  font-size:72rpx;
  height:46rpx;
}
.mperson-goods {
  background: white;
  width:100%;
}