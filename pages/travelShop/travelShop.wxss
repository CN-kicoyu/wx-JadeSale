@import "../../template/score/score.wxss";
@import "../../template/comment/comment.wxss";

.product-detail {
  background: white;
}

.detail-banner {
  width: 100%;
  height: 500rpx;
  display: block;
  margin: 0;
  padding: 0;
}

.detail-scale {
  padding: 10rpx 0 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.detail-scale image {
  width: 240rpx;
  height: 168rpx;
}

.detail-title {
  padding: 0 30rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  font-weight: bold;
  font-size: 26rpx;
  white-space: nowrap;
}

.good-col-price {
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.price-current {
  color: #ffcf55;
  font-size: 26rpx;
  margin-right: 30rpx;
  line-height: 30rpx;
  font-weight: bolder;
}

.price-old {
  font-size: 26rpx;
  color: #ccc;
  position: relative;
  margin-right: 40rpx;
}

.text-del {
  display: block;
  width: 105%;
  position: absolute;
  height: 1px;
  background: #ccc;
  top: 18rpx;
  left: 0;
}

.price-attr {
  display: block;
  width: 126rpx;
  height: 40rpx;
  background: #2a9dff;
  color: white;
  font-size: 20rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 4rpx;
  position: relative;
  top: -3rpx;
}

.detail-safe {
  border-top: 1px dashed #ccc;
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: row;
}
.detail-safe-item {
  margin-right:20rpx;
}
.detail-safe-item image {
  width: 22rpx;
  height: 22rpx;
  margin-right: 10rpx;
  position: relative;
  top: 2rpx;
}

.detail-safe-item text {
  color: #aaa;
  margin-right: 26 rpx;
}

.detail-display {
  margin-top: 20rpx;
  background: white;
}

.display-nav {
  display: flex;
}

.display-nav > view {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
}

.display-nav > view.actived {
  color: #2a9dff;
  font-weight: bold;
  border-bottom: 2px solid #2a9dff;
}

.display-scroll {
  white-space: nowrap;
}

.scroll-view-item {
  width: 100%;
  display: inline-flex;
  vertical-align: top;
  flex-direction: column;
}

.display-good image {
  width: 100%;
}

.display-contain {
  position: relative;
}

.display-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 99;
  background: rgba(255, 255, 255, 0.1);
}

.display-more {
  border-top: 2px solid #ccc;
}

.more-title {
  padding: 20rpx 30rpx;
  border-bottom: 1px dashed #ccc;
}

.more-title image {
  width: 26rpx;
  height: 26rpx;
  margin-right: 20rpx;
  position: relative;
  top: 6rpx;
}

.more-contain {
  border-bottom: 10rpx solid #eee;
}

.more-contain > view {
  display: flex;
  padding: 20rpx 30rpx;
  flex-direction: row;
  justify-content: space-between;
}

.light {
  color: #aaa;
}

.more-text {
  text-indent: 48rpx;
}

.more-design {
  padding: 20rpx 30rpx;
  white-space: normal;
}

.more-open {
  text-align: right;
  color: #2a9dff;
}

.more-open image {
  width: 22rpx;
  height: 12rpx;
  margin-left: 20rpx;
}

.comment-score {
  border-top: 2px solid #eee;
  padding: 20rpx 30rpx;
  border-bottom: 10rpx solid #eee;
  display: flex;
  flex-direction: row;
}

.comment-score > text {
  margin-right: 40rpx;
}

.comment-list {
  padding: 0 30rpx;
}

.read-more {
  text-align: center;
  padding: 20rpx 0;
  border: 1px solid #333;
  border-radius: 8rpx;
  width: 182rpx;
  margin: 30rpx auto;
}

.detail-fixed {
  height: 78rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  color: white;
  display: flex;
  width: 100%;
  z-index: 999;
}

.detail-fixed-icon {
  background: #333;
  width: 100rpx;
  flex-grow: 1;
  height: 100%;
  line-height: 78rpx;
  text-align: center;
  border-right: 1px solid #999;
}

.detail-fixed-icon image {
  height: 35rpx;
  width: 35rpx;
  vertical-align: middle;
}

.detail-fixed-buy {
  background: #ffcf55;
  flex-grow: 8;
  height: 100%;
  text-align: center;
  line-height: 78rpx;
  font-size: 26rpx;
  font-weight: bold;
}

.sevice {
  position: relative;
  top: 16rpx;
}
