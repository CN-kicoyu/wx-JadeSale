
.line {
  padding:30rpx;
  background: white;
  border-bottom:1px solid #dedede;
  display: flex;
  flex-direction: row;
  align-items:center;
}
.line:last-child {
  border: 0;
}
.title {
  display: block;
  width:115rpx;
  margin-right: 50rpx;
  color:#999;
}
.red {
  color:red;
}
.blue {
  color:#ffcf55;
}
.inputlist {
  border-bottom:1px solid #dedede;
  background:white;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.inputlist text {
  margin-right:30rpx;
}
.inputlist .input {
  font-family:"PingFang SC","Helvetica Neue","Microsoft Yahei",STHeiti,Tahoma,Simsun,Arial,sans-serif;
  font-size: 26rpx;
}
.rows {
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  align-items:center;
}
.menu-arrow {
  width: 12rpx;
  height: 26rpx;
}
.city {
  flex:1;
  display: flex;
  flex-direction: row;
  align-items:center;
}
.name {
  padding: 30rpx;
  display: block;
}
.boxs {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding-left:30rpx;
}
.box {
  position: relative;
  width:160rpx;
  height:60rpx;
  border:1px solid #dedede;
  text-align:center;
  border-radius: 2rpx;
  margin-right:14rpx;
  margin-bottom: 18rpx;
}
.box >text {
  line-height: 60rpx;
  color:#999;
}
.box >image {
  display: none;
}
.box.active {
  border-color: #ffcf55;
}
.box.active >text {
  color:#ffcf55;
}
.box.active >image {
  display: block;
  width:27rpx;
  height: 29rpx;
  position: absolute;
  bottom: 0;
  right: 0;
}
.ji-input{
  font-family:"PingFang SC","Helvetica Neue","Microsoft Yahei",STHeiti,Tahoma,Simsun,Arial,sans-serif;
  font-size: 26rpx;
  padding:0;
  margin:0;
  height:34rpx;
  min-height:34rpx;
}
.input {
  font-family:"PingFang SC","Helvetica Neue","Microsoft Yahei",STHeiti,Tahoma,Simsun,Arial,sans-serif;
  font-size: 26rpx;
  background: white;
  margin:0 30rpx;
  border-radius: 2rpx;
}
.tip {
  color:#999;
  margin-bottom: 10rpx;
  margin-left: 30rpx;
}
.btn {
  margin-top:100rpx;
}
button[type="default"].check-btn {
  width: 626rpx;
  color: #fff;
  font-size: 26rpx;
  padding: 15rpx 0;
  background: #ffcf55;
}
button[disabled][type="default"].check-btn {
  background: #aaa;
}

