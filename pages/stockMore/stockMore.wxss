.btns {
  padding: 20rpx 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background: white;
}
.content {
  background: white;
  margin-top:20rpx;
}
.btns > text {
  width: 200rpx;
  line-height: 60rpx;
  padding: 0 40rpx;
  border: 1px solid #dedede;
  text-align: center;
}
.list {
  border-bottom:1px solid #dedede;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0 30rpx;
}
.list > text {
  padding:20rpx 0;
}
.num {
  color:#00a0e9;
  width:150rpx;
}
.money {
  width:200rpx;
}
.cdetail-btn {
  height: 88rpx;
  width:100%;
  line-height: 88rpx;
  color:white;
  text-align: center;
  position: fixed;
  bottom:0;
  left:0;
  background: #ffcf55;
}
.new-btn {
  bottom:88rpx;
  background: #fff;
  color:#333;
}
.info-num {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.left, .right, .info-num input {
  border: 1px solid #d1d1d1;
  box-shadow: none;
  outline: none;
  background: white;
  font-size: 26rpx;
  height: 54rpx;
  line-height: 50rpx;
  text-align: center;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

.info-num button::after {
  display: none;
}

.left {
  border-top-left-radius: 4px;
  border-bottom-left-radius: 4px;
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
  border-right: 0;
  width: 50rpx;
}

.right {
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
  border-top-right-radius: 4px;
  border-bottom-right-radius: 4px;
  border-left: 0;
  width: 50rpx;
}

.info-num input {
  border: 1px solid #d1d1d1;
  width: 80rpx;
}