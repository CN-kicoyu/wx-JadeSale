.personal-bg {
  background: #ffcf55;
  height: 285rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.personal-avatar {
  margin-top: 50rpx;
  position: relative;
  text-align: center;
}

.personal-avatar-self {
  border-radius: 50%;
  border: 5rpx solid #fff;
  width: 152rpx;
  height: 152rpx;
}

.personal-avatar-member > image {
  position: absolute;
}

.personal-meb-1 {
  width: 90rpx;
  height: 56rpx;
  left: 37rpx;
  top: -39rpx;
}

.personal-meb-2 {
  width: 32rpx;
  height: 32rpx;
  right: 5rpx;
  bottom: 10px;
}

.personal-avatar-name {
  color: #fff;
  font-size: 26rpx;
  line-height: 40rpx;
}

.personal-avatar-hr {
  width: 52rpx;
  height: 2px;
  border-radius: 50px;
  background: white;
  margin-top: 10rpx;
}

.personal-bg-bottom {
  height: 58rpx;
  width: 100%;
  display: block;
}

.personal-menu {
  padding: 35rpx 0 150rpx;
  background: white;
}

.personal-menu-col {
  padding: 10rpx 30rpx;
  display: flex;
  height:78rpx;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.personal-menu-col:nth-child(2n+1) {
    background: #f3e9e9;
}

.menu-text {
  font-size: 26rpx;
  color: #333;
  margin-left:20rpx;
  vertical-align: middle;
  font-weight: bold;
}

.menu-icon {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
}

.menu-arrow {
  width: 12rpx;
  height: 26rpx;
}
.mask {
  background: rgba(0,0,0,.5);
  position: absolute;
  top:0;
  left:0;
  width:100%;
  height:100%;
}
.content {
  position:relative;
  width:100%;
  padding:130rpx 0;
}
.imgs {
  width: 600rpx;
  height:723rpx;
  display: block;
  margin:0 auto;
}
.actived {
  height:100%;
  overflow:hidden;
}