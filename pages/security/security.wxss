/* pages/addressEdit/addressEdit.wxss */
.inputlist {
  border-bottom:1px solid #dedede;
  padding: 25rpx 30rpx;
  background:white;
  font-size: 26rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.inputlist text {
  color:#ccc;
  margin-right:30rpx;
}
.inputlist .input {
  font-family:"PingFang SC","Helvetica Neue","Microsoft Yahei",STHeiti,Tahoma,Simsun,Arial,sans-serif;
  font-size: 26rpx;
}
.rows {
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  align-items:center;
}
.menu-arrow {
  width: 12rpx;
  height: 26rpx;
}
.city {
  flex:1;
  display: flex;
  flex-direction: row;
  align-items:center;
}
.cdetail-btn {
  height: 88rpx;
  width: 100%;
  line-height: 88rpx;
  color: white;
  text-align: center;
  position: fixed;
  bottom: 0;
  left: 0;
  display:flex;
  flex-direction: row;
}
.cdetail-btn >view {
  flex:1;
  text-align:center;
}

.region-list {
  position: absolute;
  left: 0;
  right: 0;
  height:48rpx;
}

button[type="default"].btn {
  width: 558rpx;
  margin-top: 200rpx;
  color: #fff;
  background: #ffcf55;
  font-size: 26rpx;
  padding: 10rpx 0;
}