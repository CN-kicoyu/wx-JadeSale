@import "../../template/goodOrder/goodOrder.wxss";

.pay-address {
  background: white;
}

.pay-address-title {
  display: flex;
  flex-direction: row;
  padding: 20rpx 30rpx;
  justify-content: space-between;
  border-bottom: 1px solid #dedede;
}

.pay-title-change {
  color: #999;
}

.pay-title-change > image {
  width: 12rpx;
  height: 20rpx;
  margin-left: 10rpx;
  vertical-align: middle;
}

.pay-address-info {
  padding: 26rpx 30rpx;
}

.pay-info-end {
  width: 100%;
  height: 4rpx;
  display: block;
}

.items {
  margin-top: 20rpx;
}

.item-list {
  background: white;
  margin-top:20rpx;
  border-top:1px solid #dedede;
}

.item-list > view {
  border-bottom: 1px solid #dedede;
  padding:20rpx 30rpx;
}
.item-list > view text {
  display:block;
  margin-bottom:10rpx;
}
.item-list > view text:last-child {
  margin-bottom:0;
}
