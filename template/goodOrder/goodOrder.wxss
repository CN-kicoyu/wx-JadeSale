.order-item {
  margin-bottom: 20rpx;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  background: white;
}

.order-item-title {
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1px solid #ccc;
  font-size: 28rpx;
}

.order-item-arrow {
  margin-left: 20rpx;
  width: 12rpx;
  height: 24rpx;
  vertical-align: middle;
}

.order-item-status {
  color: #f15352;
  border-left: 1px solid #ccc;
  width: 145rpx;
  text-align: center;
  font-weight: bold;
  padding-left: 30rpx;
}

.inbasket-content {
  padding: 20rpx 30rpx;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1px solid #ccc;
  display: flex;
}

.inbasket-content > image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 4px;
  margin: 0 20rpx 0 0;
  display: block;
}

.content-info {
  padding: 2rpx 0 0 0;
  width: 464rpx;
}

.info-title {
  display: block;
  height: 84rpx;
  overflow: hidden;
  white-space: normal;
  word-break: break-all;
  font-size: 28rpx;
}

.info-attr {
  font-size: 24rpx;
  display: inline-block;
  margin: 16rpx 0 10rpx;
}

.info-active {
  background: #2a9dff;
  border-radius: 4px;
  font-size: 20rpx;
  display: block;
  padding: 4rpx 0;
  color: white;
  text-align: center;
  width: 102rpx;
}

.info-buy {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.info-buy > text {
  font-size: 30rpx;
  font-weight: bolder;
  display: block;
  margin-top: 10rpx;
}

.order-item-data {
  padding: 20rpx 30rpx 5rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.order-item-money {
  color: #f15352;
  font-weight: bold;
}

.order-item-btn {
  text-align: right;
  padding: 15rpx 30rpx;
}

.order-item-btn > text {
  border: 1px solid #333;
  display: inline-block;
  text-align: center;
  padding: 12rpx 30rpx;
  border-radius: 4px;
  margin-left: 20rpx;
}
