.scrollshow {
    position:relative;
    overflow: hidden;
    margin-bottom:15rpx;
}
.scrollshow image {
    width:100%;
    height:100%;
}
.scrollshow-mask {
    background:rgba(0,0,0,.5);
    color:white;
    font-size:20rpx;
    padding:0 9rpx;
    height:42rpx;
    line-height:42rpx;
    width:100%;
    position:absolute;
    bottom:0;
    left:0;
}
.scrollshow-info {
    margin-top:20rpx;
    font-size:20rpx;
}
.scrollshow-doing, .scrollshow-willing {
    padding:5rpx 10rpx;
    border-radius:5rpx;
    margin-right:15rpx;
}
.scrollshow-doing {
    border:1px solid #3ff706;
    color:#3ff706;
}
.scrollshow-willing {
    border:1px solid #ff2a07;
    color:#ff2a07;
}