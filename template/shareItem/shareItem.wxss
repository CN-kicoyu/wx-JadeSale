.share-wrap {
  padding: 24rpx 30rpx 0;
  background: white;
  margin-bottom: 20rpx;
}

.share-author {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 24rpx;
}

.share-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 100%;
  margin-right: 20rpx;
}

.share-vip {
  width: 25rpx;
  height: 25rpx;
  margin-left: 12rpx;
}

.share-title {
  margin-bottom: 24rpx;
}

.share-theme {
  color: #1589ff;
  margin-right: 15rpx;
}

.share-img > image {
  width: 210rpx;
  height: 210rpx;
  margin-left: 30rpx;
}

.share-img > image:first-child {
  margin: 0;
}

.share-goods {
  margin-top: 20rpx;
  padding: 15rpx;
  background: #eee;
  display: flex;
  flex-direction: row;
}

.share-goods-img {
  width: 68rpx;
  height: 68rpx;
  margin-right: 15rpx;
}

.share-goods-go {
  width: 16rpx;
  height: 28rpx;
  align-self: center;
}

.share-goods-title {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 2rpx 0;
}

.color-red {
  color: #f96b69;
  font-weight: bolder;
}

.share-comment {
  padding: 20rpx 0 5rpx;
  display: flex;
  flex-direction: column;
  border-bottom: 1px dashed #ccc;
}

.share-comment >text {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 15rpx;
}

.share-icon {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 62rpx;
}

.share-icon > view  image {
  width: 30rpx;
  height: 28rpx;
  margin-right: 10rpx;
  position: relative;
  top: 3rpx;
}
