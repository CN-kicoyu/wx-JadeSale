.adisplay-wrap {
  padding: 30rpx 0;
  border-top: 5rpx solid white;
  border-bottom: 5rpx solid white;
  position: relative;
  height: 212rpx;
}

.adisplay-wrap > image {
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  height: 270rpx;
}

.adisplay-info {
  width: 312rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.8);
  margin: 0 auto;
  padding: 15rpx;
}

.adisplay-info-wrap {
  background: rgba(255, 255, 255, 0.8);
  text-align: center;
  padding: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.adisplay-info-hr {
  width: 52rpx;
  height: 2rpx;
  background: #333;
  border-radius: 2px;
  margin-top: 10rpx;
}

.adisplay-info-time {
  margin-top: 20rpx;
  flex-direction: row;
  justify-content: center;
  margin-bottom: 15rpx;
}

.adisplay-info-time-num, .adisplay-info-time-dot {
  display: inline-block;
  width: 28rpx;
  height: 45rpx;
  line-height: 45rpx;
  text-align: center;
}

.adisplay-info-time-num {
  background: #333;
  color: white;
  width: 54rpx;
}

.adisplay-goods {
  background: #f1f1f1;
  padding: 10rpx;
  white-space: nowrap;
  width: 100%;
  height: 160rpx;
  margin-bottom: 10rpx;
}

.adisplay-goods-img {
  width: 160rpx;
  height: 160rpx;
  position: relative;
  margin-right: 10rpx;
  overflow: hidden;
  display: inline-flex;
}

.adisplay-goods-img > image {
  width: 100%;
  height: 100%;
}

.adisplay-goods-mask {
  position: absolute;
  bottom: 0;
  left: 0;
  text-align: center;
  height: 35rpx;
  line-height: 35rpx;
  color: #f96b69;
  font-size: 20rpx;
  background: rgba(0, 0, 0, 0.5);
  width: 100%;
}
