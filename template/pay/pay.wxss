
.pay {
    background:rgba(0,0,0,.7);
    position:fixed;
    top:0;
    left:0;
}
.pay-head {
    display:flex;
    flex-direction: column;
    align-items: center;
    color:white;
    padding:40px 0 20px;
height:165px;
}

.pay-close {
    width: 20px;
    height:20px;
    display: block;
    margin-bottom:35px;
}

.pay-head-tip {
    font-size:15px;
}

.pay-head-money {
    font-size:30px;
    color:#ffcc00;
    font-weight: bolder;
    display: block;
    margin:5px 0 23px;
}

.pay-head-check {
    vertical-align: middle;
    margin-right:10px;
}
.pay-content {
    background: #eee;
    width:750rpx;
}
.pay-address {
    background: white;
}

.pay-address-title {
    display: flex;
    flex-direction: row;
    padding:20rpx 30rpx;
    justify-content: space-between;
    border-bottom:1px solid #cccccc;
}


.pay-title-change {
    color:#999999;
    width:200rpx;
    text-align:right;
}
.pay-title-change > image {
    width:12rpx;
    height:20rpx;
    margin-left:10rpx;
    vertical-align: middle;
}
.pay-address-info {
    padding:28rpx 30rpx;
}
.pay-info-end {
    width:100%;
    height:4rpx;
    display: block;
}

.bankpay {
    margin-top:20rpx;
    background:white;
}

.pay-item {
    padding:24rpx 30rpx;
    display:flex;
    flex-direction: row;
    justify-content: space-between;
    border-bottom: 1px solid #ccc;
    align-items: center;
}

.pay-item.subpay {
    padding:24rpx 30rpx 24rpx 90rpx;
}
.pay-bank-icon {
        width: 36rpx;
        height:36rpx;
        margin-right:20rpx;
        vertical-align: middle;
}

.pay-goods {
    background: white;
    margin:20rpx 0;
    padding-bottom:88rpx;
}